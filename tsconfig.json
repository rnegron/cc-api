{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "rootDir": "./src",

    "strict": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/**.ts"],
  "exclude": ["node_modules"],
  "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "name": "CC-API",
        "readme": "README.md",
        "theme": "minimal"
    }
}
