{
  "name": "cc-api",
  "version": "0.0.1",
  "description": "An open-source API for https://caribbeancinemas.com",
  "scripts": {
    "add-movie-runs": "ts-node ./src/scripts add-movie-runs",
    "build": "tsc -p .",
    "cleanup": "rm -rf dist",
    "docs": "typedoc",
    "format": "eslint --fix '**/*.ts'",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "lint-and-format": "yarn lint && yarn format",
    "postinstall": "yarn build",
    "scrape-theatres": "ts-node ./src/scripts scrape-theatres",
    "serve": "node dist/",
    "start": "yarn run build && yarn run serve",
    "tasks": "ts-node src/tasks",
    "test": "NODE_ENV=test jest --bail",
    "test:debug": "NODE_ENV=test jest --bail --runInBand",
    "ts-serve": "NODE_ENV=developmet ts-node src/",
    "update-movie-runs": "ts-node ./src/scripts update-movie-runs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnegron/cc-api"
  },
  "author": "Raúl Negrón (https://raulnegron.me)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "axios-mock-adapter": "^1.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "mongodb-memory-server": "^6.2.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.5.2",
    "typedoc": "^0.16.8"
  },
  "dependencies": {
    "@carsondarling/mongoose-jsonapi": "^1.2.1",
    "@gar/hapi-json-api": "^3.1.0",
    "@hapi/catbox-redis": "^5.0.5",
    "@hapi/hapi": "^19.0.5",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.0",
    "@hapi/scooter": "^6.0.0",
    "@hapi/vision": "^6.0.0",
    "@types/cheerio": "^0.22.14",
    "@types/dotenv": "^8.2.0",
    "@types/hapi__catbox-redis": "^5.0.0",
    "@types/hapi__hapi": "^19.0.0",
    "@types/hapi__hoek": "^9.0.1",
    "@types/hapi__joi": "^16.0.5",
    "@types/jsonapi-serializer": "^3.6.1",
    "@types/lodash": "^4.14.148",
    "@types/luxon": "^1.21.0",
    "@types/mongoose": "^5.5.37",
    "@types/node": "^13.7.1",
    "@types/sanitize-html": "^1.20.2",
    "@types/signale": "^1.2.1",
    "axios": "0.19.2",
    "blankie": "^4.1.1",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.0.0",
    "hapi-api-version": "^2.3.1",
    "hapi-pino": "^6.3.0",
    "hapi-query-filter": "^2.0.0",
    "hapi-rate-limitor": "^3.0.0",
    "hapi-require-https": "^4.0.0",
    "hapi-sentry": "^3.0.0",
    "hapi-swagger": "^12.0.0",
    "lodash": "^4.17.15",
    "luxon": "^1.17.2",
    "meow": "^6.0.0",
    "mongoose": "^5.8.3",
    "sanitize-html": "^1.20.1",
    "signale": "^1.4.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">=12.13"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint-and-format"
    }
  }
}
